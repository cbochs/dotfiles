# zsh-abbr will look for this file and load all abbrevations from it.
#
# Reference: https://zsh-abbr.olets.dev/advanced.html#configuration-variables

abbr "b"="bat"
abbr "c"="cd"
abbr "f"="fg"
abbr "l"="eza"
abbr "n"="nvim"
abbr "v"="nvim"
abbr "s"="ssh"

abbr "ll"="eza -la"
abbr "lg"="lazygit"
abbr "tp"="totp-cli"

abbr "g"="git"
abbr "gP"="git push"
abbr "gb"="git branch"
abbr "gp"="git pull"
abbr "gr"="git remote"
abbr "gs"="git st"
abbr "gcm"="git checkout master"
abbr "gco"="git checkout $(git branch | fzf --layout=reverse --height=10)"
abbr "gpu"="git pull upstream master"
abbr "gsm"="git submodule update --recursive"

abbr "d"="docker"
abbr "di"="docker image"
abbr "dc"="docker compose"
abbr "dv"="docker volume"

abbr "j"="bin/janus-setup"
abbr "p"="docker compose exec portal"
abbr "pr"="docker compose exec portal bin/rails"
abbr "pw"="docker compose exec portal bin/webpacker"
